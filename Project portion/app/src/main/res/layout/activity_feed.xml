<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_card_round"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_media_previous" />

        <TextView
            android:id="@+id/topicTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Laugh Feed"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingStart="12dp" />
    </LinearLayout>

    <!-- Placeholders (swap for RecyclerView later) -->
    <include layout="@layout/item_video_placeholder"/>
    <Space android:layout_width="match_parent" android:layout_height="16dp"/>
    <include layout="@layout/item_video_placeholder"/>
</LinearLayout>
